{
	"name": "htmlux",
	"version": "0.1.0",
	"description": "Production-ready component library with best practices",
	"homepage": "https://github.com/sagar-dwivedi/htmlux#readme",
	"bugs": {
		"url": "https://github.com/sagar-dwivedi/htmlux/issues"
	},
	"license": "MIT",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sagar-dwivedi/htmlux.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"postinstall": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@types/bun": "^1.3.1",
		"bumpp": "^10.3.1",
		"bunup": "^0.15.14",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3",
		"undici": "^7.16.0"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	},
	"types": "./dist/index.d.ts",
	"trustedDependencies": [
		"@bunup/dts",
		"simple-git-hooks"
	]
}
